generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  senha   String
  isAdmin Role?   @default(USER)
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
}

enum Role {
  USER
  ADMIN
}